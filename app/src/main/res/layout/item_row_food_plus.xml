<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_food"
    android:layout_width="350dp"
    android:layout_height="130dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="5dp"
    app:cardCornerRadius="13dp"
    android:backgroundTint="@color/white">


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="350dp"
        android:layout_height="130dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_food"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mcflurry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_centerHorizontal="true"
            android:fontFamily="@font/poppins_medium"
            android:text="McFlurry"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_makanan"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey"
            android:text="McDonald's"
            android:textSize="12sp" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_makanan"
            android:layout_marginTop="65dp"
            android:progressTint="#FDCC4C"
            android:rating="5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="90dp"
            android:layout_alignStart="@id/tv_makanan"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Rp11.364"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="30dp"
            android:id="@+id/btn_favorite"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_love_border"
            android:layout_alignParentEnd="true" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_edit"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_edit" />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="90dp"
            app:cardCornerRadius="6dp"
            android:layout_margin="8dp"
            android:backgroundTint="@color/yellowtextcolor"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true">

            <LinearLayout
                android:padding="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/white"
                    android:id="@+id/product_decrement"
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp">

                    <ImageView
                        android:src="@drawable/ic_remove"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.card.MaterialCardView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_marginStart="13dp"
                    android:layout_marginEnd="10dp"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:text="0"
                    android:textColor="@color/black"
                    android:id="@+id/product_selectedQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <com.google.android.material.card.MaterialCardView
                    android:backgroundTint="@color/white"
                    android:id="@+id/product_increment"
                    android:layout_width="24dp"
                    android:layout_gravity="center"
                    android:layout_height="24dp">

                    <ImageView
                        android:src="@drawable/ic_tambah"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


    </RelativeLayout>

</androidx.cardview.widget.CardView>