<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="190dp"
    android:layout_marginHorizontal="25dp"
    app:cardCornerRadius="13dp"
    app:cardElevation="20dp">

    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="350dp"
        android:layout_height="190dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_resto"
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:scaleType="centerCrop"
            android:src="@drawable/bg_resto" />

        <TextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_resto"
            android:layout_marginVertical="5dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="McDonald's"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginVertical="162dp"
            android:progressTint="#FDCC4C"
            android:rating="5" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_below="@+id/iv_resto"
            android:layout_alignParentEnd="true"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_bagi" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/btn_favorite"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_love"
            android:layout_below="@+id/iv_resto"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>