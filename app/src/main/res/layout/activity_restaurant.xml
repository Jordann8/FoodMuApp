<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/header"
        android:layout_width="fill_parent"
        android:layout_height="450dp"
        android:background="@drawable/bg_restaurant"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"


        app:layout_constraintTop_toTopOf="parent">




    </androidx.appcompat.widget.AppCompatImageView>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/appCompatImageView2"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/ic_restaurant"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_circle"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginRight="350dp"
        android:src="@drawable/ic_arrow_back"

        >


    </ImageButton>

    <ImageView
        android:contentDescription="ssks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/bt_carousel"
        app:layout_constraintBottom_toBottomOf="@id/header"
        app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="60dp"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_button_circle"
        android:backgroundTint="@color/white"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="350dp"
        android:src="@drawable/ic_hati"
        android:paddingTop="25dp"
        android:paddingStart="2dp"
        android:paddingEnd="0dp"
     >


    </ImageButton>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="280dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/header"
        app:layout_constraintRight_toRightOf="@id/header"

        app:layout_constraintTop_toBottomOf="@id/header">

        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="100dp">

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:padding="16dp"
            android:text="McDonaldâ€™s"
            android:textColor="@color/black"
            android:textSize="28sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_desc_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/tv_restaurant"
            android:paddingVertical="8dp"
            android:paddingLeft="17dp"
            android:text="Fast Food Restaurant"

            />

        <RatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_desc_restaurant"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="30dp"
            android:progressTint="#FDCC4C"
            android:rating="5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:textSize="16sp"
            android:text="Open 24 hours"
            android:textColor="@color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:paddingTop="25dp"
            android:layout_marginRight="30dp"
            />



    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>