<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RestaurantActivity"
    android:background="@drawable/screen">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/header"
            android:layout_width="fill_parent"
            android:layout_height="450dp"
            android:background="@drawable/bg_restaurant"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/appCompatImageView2"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/ic_restaurant"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginRight="350dp"
            android:src="@drawable/ic_arrow_back"/>

        <ImageView
            android:contentDescription="ssks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bt_carousel"
            app:layout_constraintBottom_toBottomOf="@id/header"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="60dp" />

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/bg_button_circle"
            android:backgroundTint="@color/white"
            android:elevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="350dp"
            android:src="@drawable/ic_love"
            android:paddingTop="1dp"/>

        <RelativeLayout
            android:id="@+id/rlDesc"
            android:layout_width="fill_parent"
            android:layout_height="335dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintLeft_toLeftOf="@id/header"
            app:layout_constraintRight_toRightOf="@id/header"

            app:layout_constraintTop_toBottomOf="@id/header">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="100dp">

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:padding="16dp"
                android:text="McDonald’s"
                android:textColor="@color/black"
                android:textSize="28sp" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_desc_restaurant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/tv_restaurant"
                android:paddingVertical="8dp"
                android:paddingLeft="17dp"
                android:text="Fast Food Restaurant"
                android:textSize="16sp" />

            <RatingBar
                android:id="@+id/ratingBar"
                style="@style/Widget.AppCompat.RatingBar.Small"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_desc_restaurant"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="30dp"
                android:progressTint="#FDCC4C"
                android:rating="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/poppins_medium"
                android:paddingTop="25dp"
                android:text="Open 24 hours"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_desc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/tv_desc_restaurant"
                android:layout_marginTop="50sp"
                android:fontFamily="@font/poppins_medium"
                android:paddingLeft="16sp"
                android:paddingRight="80sp"
                android:text="Classic fast food chain, famous for hamburgers, potatoes &amp; ice cream"
                android:textSize="16sp"/>

            <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/btn_keranjang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/buttonPanel"
                android:layout_alignStart="@+id/buttonPanel"
                android:layout_alignLeft="@id/tv_desc"
                android:layout_alignEnd="@+id/buttonPanel"
                android:layout_alignParentLeft="true"
                android:layout_marginStart="350dp"
                android:layout_marginBottom="-175dp"
                android:background="@drawable/bg_keranjang_btn"
                android:elevation="10dp"
                android:paddingStart="2dp"
                android:src="@drawable/ic_cart" />

            <LinearLayout
                android:id="@+id/buttonPanel"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_alignTop="@id/tv_desc_restaurant"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="170dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginEnd="25dp"
                    android:backgroundTint="@color/primary"
                    android:insetLeft="0dp"
                    android:insetTop="0dp"
                    android:insetRight="0dp"
                    android:insetBottom="0dp"
                    app:cornerRadius="13dp"
                    android:src="@drawable/ic_bagi"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    android:background="@drawable/main_button"
                    app:iconTint="@color/black" />

                <Button
                    android:id="@+id/btMenu"
                    android:layout_width="270dp"
                    android:layout_height="60dp"
                    android:background="@drawable/main_button"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="See the menu"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_revuew"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/buttonPanel"
                android:layout_alignBottom="@id/buttonPanel"
                android:layout_marginBottom="-20dp"
                android:fontFamily="@font/poppins_medium"
                android:text="Review"
                android:textColor="@color/black" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginEnd="55dp"
            app:layout_constraintLeft_toLeftOf="@id/rlDesc"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rlDesc" >

            <ImageView
                android:id="@+id/ic_profile"
                android:layout_width="30dp"
                android:layout_height="fill_parent"
                android:src="@drawable/ic_person" />


            <androidx.appcompat.widget.LinearLayoutCompat
                android:id="@+id/ll_displayname"
                android:gravity="center_vertical"
                android:layout_width="260dp"
                android:layout_height="25dp"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="30dp">

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/ic_profile"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/poppins_medium"
                    android:text="Pitri"
                    android:textColor="@color/black" />

                <RatingBar
                    android:id="@+id/rating_bar"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:progressTint="#FDCC4C"
                    android:rating="5"
                    android:layout_marginStart="3dp" />

            </androidx.appcompat.widget.LinearLayoutCompat>

            <LinearLayout
                android:layout_width="260dp"
                android:layout_height="20dp"
                android:layout_alignLeft="@id/ic_profile"
                android:layout_alignParentTop="true"
                android:layout_marginStart="30dp"
                android:layout_marginTop="25dp"
                android:layout_toEndOf="@+id/ic_profile">

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="“suka banget deh ama ni restoran”"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:gravity="center">


                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_medium"
                    android:text="21/03/21"
                    android:textSize="11sp" />

            </LinearLayout>
        </RelativeLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
