<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".LoginActivity"
    android:id="@+id/parent"
    android:background="@drawable/screen"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_header"
            android:layout_width="match_parent"
            android:layout_height="210dp"
            android:background="@drawable/header"
            app:layout_constraintTop_toTopOf="parent"

            />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_namaaplikasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:text="FOOD MU!"
            android:fontFamily="@font/poppins_bold"
            android:textSize="30sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_slogan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order food with one click"
            android:fontFamily="@font/poppins_medium"
            android:textSize="15sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_namaaplikasi" />

        <com.google.android.material.tabs.TabLayout
            app:tabTextColor="@color/black"
            android:id="@+id/tl_loginregister"
            android:layout_width="match_parent"
            app:tabRippleColor="@null"
            app:tabIndicatorGravity="bottom"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="210dp"
            app:tabIndicatorFullWidth="false"
            app:tabIndicatorColor="@color/black"
            app:tabIndicator="@drawable/bg_linetab"
            android:background="@drawable/tablayout"
            />
        <androidx.viewpager2.widget.ViewPager2
            app:layout_constraintTop_toBottomOf="@id/tl_loginregister"
            android:id="@+id/vp_loginregister"
            android:layout_width="match_parent"
            android:layout_height="475dp"
            android:layout_alignParentBottom="true"

            android:layout_marginBottom="10dp" />







    </androidx.constraintlayout.widget.ConstraintLayout>



</RelativeLayout>