<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen"
    tools:context=".DetailProfileActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_detail_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:title="My profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/photo_detail_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_detail_profile"
        android:layout_centerHorizontal="true"
        android:src="@drawable/ic_profile_detail" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_below="@id/photo_detail_profile"
        android:background="@drawable/bg_detail_profile"
        android:padding="20dp"
        >

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_nama_detail_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Profile"
            android:textColor="@color/black"
            android:textSize="21sp" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_nama_detail_profile"
            android:layout_alignEnd="@id/tv_nama_detail_profile"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="60dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Phone Number"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_phone_numbernya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_number"
            android:layout_alignStart="@id/tv_phone_number"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="+62 878 6987 6534"
            android:textSize="18sp"
            android:textColor="@color/black"/>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_phone_number"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_change" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_phone_numbernya"
            android:layout_alignEnd="@id/tv_phone_number"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="75dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Email"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_emailnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_email"
            android:layout_alignStart="@id/tv_profile_email"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="lildamian@gmail.com"
            android:textColor="@color/black"
            android:textSize="18sp" />



        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_profile_email"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_change" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_emailnya"
            android:layout_alignEnd="@id/tv_nama_detail_profile"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="40dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Payment Method"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_paymentnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_payment"
            android:layout_alignStart="@id/tv_profile_payment"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Credit card, Mandiri"
            android:textColor="@color/black"
            android:textSize="18sp" />


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_profile_payment"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_change" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_paymentnya"
            android:layout_alignEnd="@id/tv_phone_number"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="51dp"
            android:fontFamily="@font/poppins_medium"
            android:text="Address"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_profile_addressnya"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_profile_address"
            android:layout_alignStart="@id/tv_profile_address"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Jl.Kenari No.37, Desa Ajo"
            android:textColor="@color/black"
            android:textSize="18sp" />



        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/tv_profile_address"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/ic_change" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_done_edit"
            android:layout_width="270dp"
            android:layout_height="60dp"
            android:layout_below="@id/tv_profile_addressnya"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/main_button"
            android:text="Done"
            android:fontFamily="@font/poppins_semi_bold"
            android:textColor="@color/black"
            android:textSize="15sp" />

    </RelativeLayout>

</RelativeLayout>