<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary"
    tools:context=".OptionActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_profile"
        android:layout_width="29dp"
        android:layout_height="27dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="125dp"
        android:src="@drawable/profiles"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_profile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="My Profile"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_profile"
        app:layout_constraintStart_toEndOf="@+id/iv_option_profile"
        app:layout_constraintTop_toTopOf="@+id/iv_option_profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_line1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/strip2"
        app:layout_constraintStart_toStartOf="@+id/tv_option_profile"
        app:layout_constraintTop_toBottomOf="@+id/tv_option_profile" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_chat"
        app:layout_constraintEnd_toEndOf="@+id/iv_option_profile"
        app:layout_constraintStart_toStartOf="@+id/iv_option_profile"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_profile" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Chat"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_chat"
        app:layout_constraintStart_toEndOf="@+id/iv_option_chat"
        app:layout_constraintTop_toTopOf="@+id/iv_option_chat" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_line2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/strip2"
        app:layout_constraintStart_toStartOf="@+id/tv_option_chat"
        app:layout_constraintTop_toBottomOf="@+id/tv_option_chat" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_loves"
        app:layout_constraintEnd_toEndOf="@+id/iv_option_chat"
        app:layout_constraintStart_toStartOf="@+id/iv_option_chat"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_chat" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_liked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Liked"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_liked"
        app:layout_constraintStart_toEndOf="@+id/iv_option_liked"
        app:layout_constraintTop_toTopOf="@+id/iv_option_liked" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_line3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/strip2"
        app:layout_constraintStart_toStartOf="@+id/tv_option_liked"
        app:layout_constraintTop_toBottomOf="@+id/tv_option_liked" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_cart"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="75dp"
        android:src="@drawable/keranjangg"
        app:layout_constraintEnd_toEndOf="@+id/iv_option_liked"
        app:layout_constraintStart_toStartOf="@+id/iv_option_liked"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_liked" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_cart"
        android:layout_width="44dp"
        android:layout_height="24dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Cart"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_cart"
        app:layout_constraintStart_toEndOf="@+id/iv_option_cart"
        app:layout_constraintTop_toTopOf="@+id/iv_option_cart" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_line4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@drawable/strip2"
        app:layout_constraintStart_toStartOf="@+id/tv_option_cart"
        app:layout_constraintTop_toBottomOf="@+id/tv_option_cart" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_notif"
        app:layout_constraintEnd_toEndOf="@+id/iv_option_cart"
        app:layout_constraintStart_toStartOf="@+id/iv_option_cart"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_cart" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Notification"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_notif"
        app:layout_constraintStart_toEndOf="@+id/iv_option_notif"
        app:layout_constraintTop_toTopOf="@+id/iv_option_notif" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_option_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:src="@drawable/exit"
        app:layout_constraintEnd_toEndOf="@+id/iv_option_notif"
        app:layout_constraintStart_toStartOf="@+id/iv_option_notif"
        app:layout_constraintTop_toBottomOf="@+id/iv_option_notif" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_option_signout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/poppins_semi_bold"
        android:text="Sign Out"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_option_signout"
        app:layout_constraintStart_toEndOf="@+id/iv_option_signout"
        app:layout_constraintTop_toTopOf="@+id/iv_option_signout" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_shadow_option"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="115dp"
        android:elevation="100dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_option_homepage"
                android:layout_width="160dp"
                android:layout_height="348dp"
                android:elevation="30dp"
                android:src="@drawable/img_home_page_option"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>