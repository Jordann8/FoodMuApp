<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChangeNameActivity"
    android:background="@drawable/screen"

    >

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_editpf"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:title="Ubah Nama"
        app:titleTextColor="@color/black"
        app:navigationIcon="@drawable/ic_arrow_back"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tv_desc_pf"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="16dp"

        android:fontFamily="@font/poppins_regular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/deskripsigrey"
        android:text="Please use your real name, because this information will be used for verification."
        android:textSize="17sp"
        app:layout_constraintTop_toBottomOf="@id/tb_editpf"
        />
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ti_editpf"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="350dp"
        android:layout_height="60dp"
        app:boxStrokeColor="@color/primary"
        app:hintTextColor="@color/greytitle"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:hint="Nama"
        app:placeholderTextColor="@color/greytitle"
        android:backgroundTint="@color/primary"
        android:textColorHint="@color/black"
        app:layout_constraintTop_toBottomOf="@id/tv_desc_pf"
        >

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            />


    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="340dp"
        android:layout_height="60dp"
        android:background="@drawable/main_button"
        android:text="Ubah Nama"
        android:textAllCaps="false"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/ti_editpf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="50dp"
        />




</androidx.constraintlayout.widget.ConstraintLayout>