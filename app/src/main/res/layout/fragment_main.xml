                            <RelativeLayout
                                android:id="@+id/background_burger"
                                android:layout_width="350dp"
                                android:layout_height="130dp" >

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/iv_burger"
                                    android:layout_width="120dp"
                                    android:layout_height="120dp"
                                    android:layout_centerVertical="true"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/beefburger" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_burger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="20dp"
                                    android:layout_marginEnd="85dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:layout_alignEnd="@id/btn_favorite_burger"
                                    android:text="Beef Burger"
                                    android:textColor="@color/black"
                                    android:textSize="21sp" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_restaurant_burger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignStart="@+id/tv_burger"
                                    android:layout_marginTop="50dp"
                                    android:fontFamily="@font/poppins_medium"
                                    android:textColor="@color/grey"
                                    android:text="McDonald's"
                                    android:textSize="16sp" />

                                <RatingBar
                                    android:id="@+id/ratingbar_burger"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginEnd="130dp"
                                    android:layout_marginVertical="80dp"
                                    android:progressTint="#FDCC4C"
                                    android:rating="5" />

                                <androidx.appcompat.widget.AppCompatTextView
                                    android:id="@+id/tv_harga_burger"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginVertical="90dp"
                                    android:layout_marginEnd="90dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:layout_alignEnd="@id/btn_bagi_burger"
                                    android:text="Rp11.364"
                                    android:textColor="@color/black"
                                    android:textSize="21sp" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btn_bagi_burger"
