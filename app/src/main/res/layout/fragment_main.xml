<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/screen"
        android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="780dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="18dp"
                    android:layout_below="@id/hello" />


                <EditText
                    android:id="@+id/et_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Search"
                    android:drawableStart="@drawable/ic_search"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="20dp"
                    android:clickable="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_button"
                    android:layout_below="@id/tv_welcome"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_restaurantnearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_nearby_text"
                    android:textSize="21sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/et_search_bar"
                    android:layout_marginTop="10dp"/>

                <HorizontalScrollView
                    android:id="@+id/container_resto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_restaurantnearby"
                    android:layout_marginTop="10dp"
                    android:scrollbars="none">

                    <LinearLayout
                        android:id="@+id/layout_rv_kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView"
                            android:layout_width="350dp"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="5dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="13dp">

                            <RelativeLayout
                                android:id="@+id/background"
                                android:layout_width="350dp"
                                android:layout_height="200dp" >

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/cover"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_resto" />

                                <TextView
                                    android:id="@+id/title"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/cover"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:text="McDonald's"
                                    android:textColor="@color/black"
                                    android:textSize="21sp" />

                                <RatingBar
                                    android:id="@+id/ratingBar"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="170dp"
                                    android:progressTint="#FDCC4C"
                                    android:rating="5" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btn_back"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/cover"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginHorizontal="30dp"
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_bagi" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/btn_favorite"
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_love"
                                    android:layout_below="@+id/cover"
                                    android:layout_alignParentEnd="true" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cardView2"
                            android:layout_width="350dp"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="10dp"
                            android:backgroundTint="@color/white"
                            app:cardCornerRadius="13dp">

                            <RelativeLayout
                                android:id="@+id/background2"
                                android:layout_width="350dp"
                                android:layout_height="200dp" >

                                <androidx.appcompat.widget.AppCompatImageView
                                    android:id="@+id/cover2"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/bg_resto2" />

                                <TextView
                                    android:id="@+id/title2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_below="@+id/cover2"
                                    android:layout_marginVertical="5dp"
                                    android:layout_marginLeft="10dp"
                                    android:fontFamily="@font/poppins_semi_bold"
                                    android:text="Burger King"
                                    android:textColor="@color/black"
                                    android:textSize="21sp" />

                                <RatingBar
                                    android:id="@+id/ratingBar2"
                                    style="@style/Widget.AppCompat.RatingBar.Small"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginStart="10dp"
                                    android:layout_marginTop="170dp"
                                    android:progressTint="#FDCC4C"
                                    android:rating="5" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:id="@+id/btn_back2"
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:layout_below="@+id/cover2"
                                    android:layout_alignParentEnd="true"
                                    android:layout_marginHorizontal="30dp"
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_bagi" />

                                <androidx.appcompat.widget.AppCompatImageButton
                                    android:layout_width="50dp"
                                    android:layout_height="40dp"
                                    android:id="@+id/btn_favorite2"
                                    android:backgroundTint="@color/white"
                                    android:src="@drawable/ic_love"
                                    android:layout_below="@+id/cover2"
                                    android:layout_alignParentEnd="true" />


                            </RelativeLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                </HorizontalScrollView>

                <androidx.appcompat.widget.AppCompatTextView
