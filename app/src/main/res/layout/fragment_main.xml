<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/screen"
        android:orientation="vertical" />

        <LinearLayout
            android:id="@+id/ll_home"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="match_parent"
            android:layout_height="780dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:paddingLeft="20dp"
                android:paddingRight="15dp"
                android:paddingTop="25dp">

                <TextView
                    android:id="@+id/hello"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/hello_text"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins_medium"
                    android:textSize="16dp"/>

                <TextView
                    android:id="@+id/tv_welcome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/welcome_text"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textSize="18dp"
                    android:layout_below="@id/hello" />

                <ImageButton
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/hamburger" />

                <EditText
                    android:id="@+id/et_search_bar"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:hint="Search"
                    android:drawableStart="@drawable/ic_search"
                    android:fontFamily="@font/poppins_regular"
                    android:paddingLeft="20dp"
                    android:clickable="true"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:background="@drawable/rounded_button"
                    android:layout_below="@id/tv_welcome"/>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_restaurantnearby"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/restaurant_nearby_text"
                    android:textSize="21sp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:textColor="@color/black"
                    android:layout_below="@id/et_search_bar"
                    android:layout_marginTop="10dp"/>

                <ScrollView
                    android:id="@+id/container_resto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_restaurantnearby"
                    android:layout_marginTop="10dp">

                    <LinearLayout
                        android:id="@+id/layout_rv_kategori"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_kategori"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_row_resto" />

                    </LinearLayout>

                </ScrollView>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tv_popular_foods"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/container_resto"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/poppins_semi_bold"
                    android:text="@string/popular_food_text"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <ScrollView
                    android:id="@+id/container_makanan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/tv_popular_foods">

                    <LinearLayout
                        android:id="@+id/layout_rv_resto"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical">

                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_popular_food"
                            android:layout_width="match_parent"
                            android:layout_height="fill_parent"
                            android:orientation="vertical"
                            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                            tools:listitem="@layout/item_row_food" />

                    </LinearLayout>

                </ScrollView>
            </RelativeLayout>
        </LinearLayout>
</FrameLayout>