<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="130dp"
    android:layout_marginVertical="10dp"
    android:layout_marginStart="5dp"
    app:cardCornerRadius="13dp"
    android:backgroundTint="@color/white">


    <RelativeLayout
        android:id="@+id/background"
        android:layout_width="350dp"
        android:layout_height="130dp" >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_food"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop"
            android:src="@drawable/mcflurry" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_makanan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:layout_marginEnd="90dp"
            android:fontFamily="@font/poppins_medium"
            android:layout_alignEnd="@id/btn_back"
            android:text="McFlurry"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_restaurant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_makanan"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/grey"
            android:text="McDonald's"
            android:textSize="16sp" />

        <androidx.appcompat.widget.AppCompatRatingBar
            android:id="@+id/ratingBar"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/tv_makanan"
            android:layout_marginTop="65dp"
            android:progressTint="#FDCC4C"
            android:rating="5" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_harga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="90dp"
            android:layout_alignStart="@id/tv_makanan"
            android:fontFamily="@font/poppins_semi_bold"
            android:text="Rp11.364"
            android:textColor="@color/black"
            android:textSize="21sp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginHorizontal="30dp"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_bagi" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:layout_marginTop="8dp"
            android:id="@+id/btn_favorite"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_love_border"
            android:layout_alignParentEnd="true" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>